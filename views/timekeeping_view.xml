<odoo>
  <!-- form view -->
  <record id="view_form_timekeeping" model="ir.ui.view">
    <field name="name">Timekeeping Form</field>
    <field name="model">timekeeping.table</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group name="group_top">
            <group name="group_left">
              <field name="user_id" />
              <field name="product_id" />
            </group>
            <group name="group_right">
              <field name="quantity" />
              <field name="date" />
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>
  <!-- tree view -->
  <record id="view_tree_timekeeping" model="ir.ui.view">
    <field name="name">Timekeeping List</field>
    <field name="model">timekeeping.table</field>
    <field name="arch" type="xml">
      <tree>
        <field name="user_id" width="100" />
        <field name="product_id" width="150" />
        <field name="quantity" width="80" />
        <field name="pay" width="80" />
        <field name="date" width="120" />
      </tree>
    </field>
  </record>
  <!-- search view -->
  <record id="view_search_timekeeping" model="ir.ui.view">
    <field name="name">Timekeeping Filters</field>
    <field name="model">timekeeping.table</field>
    <field name="arch" type="xml">
      <search>
        <field name="user_id" />
        <field name="product_id" />
        <filter string="Today" name="filter_today"
          domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]" />
        <group expand="1" string="Group By">
          <filter string="User" name="user_id" context="{'group_by':'user_id'}" />
          <filter string="Product" name="product_id" context="{'group_by':'product_id'}" />
          <filter string="Date" name="date" context="{'group_by':'date'}" />
        </group>
        <!-- <aggregate string="Sum of Pay" name="pay_sum" field="pay" function="sum" /> -->
      </search>
    </field>
  </record>
</odoo>
