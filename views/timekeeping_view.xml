<odoo>
	<!-- view for timekeeping.table -->
	<!-- form view -->
	<record id="view_form_timekeeping" model="ir.ui.view">
		<field name="name">Timekeeping Form</field>
		<field name="model">timekeeping.table</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group name="group_top">
						<group name="group_left">
							<!-- <field name="partner_id" invisible="1"/> -->
							<field name="order_id" options="{'no_create': True}" domain="[('state', '=', 'sale')]"
								required="True" />
							<field name="order_line_id" options="{'no_create': True}"
								domain="[('order_id', '=', order_id)]" required="True" />
							<field name="quantity" />
							<field name="reason" options="{'no_create': True}" />
						</group>
						<group name="group_right">
							<group name="group_left">
								<field name="date" />
								<field name="company_id" options="{'no_create': True}"
									domain="[('parent_id', '!=', False)]" />
								<field name="employee_id" domain="[('company_id', '=', company_id)]"
									options="{'no_create': True}" />
							</group>
							<group name="group_right">
								<field name="image_1920" widget="image" />
							</group>
						</group>
					</group>
					<group string="Ghi chú">
						<field colspan="2" name="note" nolabel="1"
							placeholder="This note is only for internal purposes." />
					</group>
				</sheet>
				<!-- mail mixin fields -->
				<div class="oe_chatter">
					<field name="message_follower_ids" widget="mail_followers" />
					<field name="activity_ids" widget="mail_activity" />
					<field name="message_ids" widget="mail_thread" />
				</div>
			</form>
		</field>
	</record>
	<!-- tree view -->
	<record id="view_tree_timekeeping" model="ir.ui.view">
		<field name="name">Timekeeping List</field>
		<field name="model">timekeeping.table</field>
		<field name="arch" type="xml">
			<tree>
				<field name="date" width="80" />
				<field name="company_id" width="80" />
				<field name="employee_id" width="80" />
				<field name="order_id" width="80" />
				<field name="order_line_id" width="80" />
				<field name="quantity" width="80" />
				<field name="list_price" width="80" />
				<field name="pay" widget="monetary" width="80" options="{'currency_field': 'currency_id'}"
					sum="Total Pay" />
				<!-- must put it here to show the sympol -->
				<field name="currency_id" invisible="1" />
			</tree>
		</field>
	</record>
	<!-- view for timekeeping.many -->
	<record id="view_form_many" model="ir.ui.view">
		<field name="name">Many Form</field>
		<field name="model">timekeeping.many</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="company_id" readonly="False"/>
						</group>
						<group>
							<field name="date" width="120" readonly="True"/>
						</group>
					</group>
					<field name="line_ids">
						<tree editable="bottom">
							<field name="employee_id" width="100" required="True" options="{'no_create': True}"
								domain="[('company_id', '=', parent.company_id)]"
								context="{'default_company_id': company_id}" />
							<field name="company_id" width="120" readonly="True" widget="selection" />
							<field name="order_id" required="True" width="80" options="{'no_create': True}"
								domain="[('state', '=', 'sale')]" />
							<field name="order_line_id" required="True" width="80" options="{'no_create': True}"
								domain="[('order_id', '=', order_id)]" />
							<field name="quantity" width="40" />
						</tree>
					</field>
				</sheet>
			</form>
		</field>
	</record>
	<!-- view for timekeeping.reason -->
	<record id="view_list_reason" model="ir.ui.view">
		<field name="name">Reason List</field>
		<field name="model">timekeeping.reason</field>
		<field name="arch" type="xml">
			<tree editable="bottom">
				<field name="reason" string="Lý do" />
			</tree>
		</field>
	</record>
	<!-- search view -->
	<record id="view_search_timekeeping" model="ir.ui.view">
		<field name="name">Timekeeping Filters</field>
		<field name="model">timekeeping.table</field>
		<field name="arch" type="xml">
			<search>
				<field name="employee_id" />
				<field name="order_line_id" />
				<!-- Filters -->
				<filter string="Today" name="filter_today"
					domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]" />
				<!-- GroupBy -->
				<group expand="1" string="Group By">
					<filter string="User" name="employee_id" context="{'group_by':'employee_id'}" />
					<filter string="Product" name="order_line_id" context="{'group_by':'order_line_id'}" />
					<filter string="Date" name="date" context="{'group_by':'date'}" />
				</group>
			</search>
		</field>
	</record>
</odoo>